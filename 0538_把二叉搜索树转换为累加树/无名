# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def convertBST(self, root):
        """
        :type root: TreeNode
        :rtype: TreeNode
        """

        def preorder(root):
            if root is None:
                return 
            preorder(root.left)
            stack.append(root)
            preorder(root.right)
        
        stack = []
        preorder(root)
        sum = 0
        while len(stack) > 0:
            tmp = stack.pop()
            sum += tmp.val
            tmp.val = sum
        return root
